<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="MaterialTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme -->
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
    </style>


    <style name="Theme.MoveonHome" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="clickable_effect">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:theme">@android:style/ThemeOverlay.Material.Dark</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="BrandedSwitch">
        <item name="colorAccent">@color/blue_500</item>
    </style>

    <style name="MatchSpinnerStyle" parent="android:style/Widget.ListView.DropDown">
        <item name="android:divider">@color/grey1</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="MatchSpinnerTheme" parent="Theme.AppCompat">
        <item name="android:dropDownListViewStyle">@style/MatchSpinnerStyle</item>
    </style>



    <style name="Widget.App.AboutPage" parent="about_About">
        <item name="aboutBackground">#ffffff</item>
        <item name="aboutElementIconTint">#333333</item>
        <item name="aboutSeparatorColor">#999999</item>
        <item name="aboutDescriptionTextAppearance">@style/TextAppearance.App.AboutPage.Description</item>

        <!-- similarly, you can also apply the following text appearances -->
        <item name="aboutElementTextAppearance">@style/about_elementTextAppearance.Dark</item>
        <item name="aboutGroupTextAppearance">@style/about_groupTextAppearance</item>
    </style>

    <style name="TextAppearance.App.AboutPage.Description" parent="about_descriptionTextAppearance.Dark">
        <item name="android:textStyle">bold|italic</item>
    </style>


</resources>