<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F1F1F"
    tools:context=".ui.packageandmovers.fragMov.cost.CoastPage">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19.5dp"
        android:layout_marginTop="22.5dp"
        android:src="@drawable/ic_vector" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="56dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="35dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Your estimated cost of shifting"
        android:textColor="@color/white"
        android:textSize="18sp" />



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:layout_marginTop="112dp"
            android:layout_marginStart="18dp"
            android:backgroundTint="#302E2E"
            android:layout_marginEnd="18dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Cost"
                    android:text="Estimated Cost"
                    android:textColor="@color/white"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="16dp"
                    android:textSize="18sp"
                    />

                <TextView
                    android:id="@+id/EstCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="285dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:text="â‚¹5200.00"
                    android:textColor="@color/white" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1.4dp"
                    android:layout_marginTop="46dp"
                    android:background="#7C7878"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="56dp"
                    android:id="@+id/houseType"
                    android:text="House type"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/Thouse_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="202dp"
                    android:layout_marginTop="56dp"
                    android:layout_marginEnd="2dp"
                    android:layout_toEndOf="@id/houseType"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:text="Standard"
                    android:textColor="@color/white"
                    android:textSize="12dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="81dp"
                    android:id="@+id/Date"
                    android:text="Date of movement"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/Tdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="180dp"
                    android:layout_marginTop="81dp"
                    android:layout_marginEnd="7dp"
                    android:layout_toEndOf="@id/Date"
                    android:text="25/10/2021"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="105dp"
                    android:id="@+id/Service"
                    android:text="Service"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="180dp"
                    android:layout_marginTop="105dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toEndOf="@id/Service"
                    android:gravity="right"
                    android:lineHeight="11.06dp"
                    android:text="Packers and Movers"
                    android:textColor="@color/white"
                    android:textSize="11sp" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_frame_231"
            android:layout_marginStart="18sp"
            android:layout_marginTop="287dp"
            android:background="#302E2E"
           />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/costscreen"
            android:layout_marginStart="18sp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="512dp"
            android:background="#302E2E"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginStart="18sp"
            android:layout_marginTop="650dp"
            android:layout_marginEnd="18dp"
            android:backgroundTint="#1E54B7"
            android:text="Request Callback"
            android:id="@+id/coastBtn"
            android:textColor="@color/white" />




    </RelativeLayout>



</LinearLayout>