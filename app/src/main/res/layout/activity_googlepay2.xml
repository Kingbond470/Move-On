<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141414"
    android:orientation="vertical"
    tools:context=".ui.payment.googlepay">


    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSignupHeading"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/ic_editext_background"
        android:fontFamily="@font/roboto_light"
        android:hint="Name"
        android:maxLength="35"
        android:paddingVertical="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:text="Umang Sharma"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/upi_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSignupHeading"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/ic_editext_background"
        android:fontFamily="@font/roboto_light"
        android:hint="UPI ID"
        android:maxLength="35"
        android:paddingVertical="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:text="im.mrstark08@okicici"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="normal" />


    <EditText
        android:id="@+id/amount_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSignupHeading"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/ic_editext_background"
        android:fontFamily="@font/roboto_light"
        android:hint="â‚¹ 100.00"
        android:maxLength="35"
        android:paddingVertical="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSignupHeading"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/ic_editext_background"
        android:fontFamily="@font/roboto_light"
        android:hint="UPI Payment"
        android:maxLength="35"
        android:paddingVertical="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:text="UPI Payment"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/ic_button_bg_fill"
        android:fontFamily="@font/roboto"
        android:text="Pay Now"
        android:textColor="@color/white"
        android:textSize="18sp" />

</LinearLayout>