<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_app"
    android:fitsSystemWindows="true"
    tools:context=".ui.login.EmailFragment">


    <ImageView
        android:id="@+id/ivEmailGirlLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:src="@drawable/ic_login_email_girl" />

    <TextView
        android:id="@+id/tvLoginEmailHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivEmailGirlLogo"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="118dp"
        android:fontFamily="@font/roboto"
        android:letterSpacing="0.05"
        android:text="Enter your e-mail"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="normal" />


    <EditText
        android:id="@+id/etLoginEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLoginEmailHeading"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/ic_editext_background"
        android:fontFamily="@font/roboto"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:maxLength="35"
        android:paddingVertical="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="normal" />


    <TextView
        android:id="@+id/tvLoginEmailSignupLeftText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etLoginEmail"
        android:layout_marginLeft="18dp"
        android:fontFamily="@font/roboto"
        android:text="Don’t have an account? "
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tvLoginSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etLoginEmail"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="18dp"
        android:layout_toRightOf="@+id/tvLoginEmailSignupLeftText"
        android:fontFamily="@font/roboto"
        android:text="Don’t have an account?"
        android:textColor="@color/blue_light"
        android:textSize="14sp"
        android:textStyle="normal" />


    <Button
        android:id="@+id/btnLoginWithEmailContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="18dp"
        android:layout_marginVertical="18dp"
        android:background="@drawable/ic_button_bg"
        android:drawablePadding="15dp"
        android:fontFamily="@font/roboto"
        android:maxLines="1"
        android:paddingHorizontal="60dp"
        android:paddingVertical="18dp"
        android:text="Continue"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="normal" />

</RelativeLayout>