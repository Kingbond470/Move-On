<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141414"
    android:orientation="vertical"
    tools:context=".ui.packageandmovers.fragMov.confirm.confirmPage">


    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#141414"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19.5dp"
            android:layout_marginTop="25.5dp"
            android:src="@drawable/ic_vector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/backArrow"
            android:layout_marginStart="42dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="42dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:id="@+id/heading"
            android:text="We  received  calback  request"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <pl.droidsonroids.gif.GifImageButton
            android:id="@+id/igf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/heading"
            android:layout_marginStart="74dp"
            android:layout_marginTop="68dp"
            android:layout_marginEnd="74dp"
            android:background="@drawable/roundbox"
            android:src="@drawable/ic_component_44" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/success_screen"
            android:layout_below="@id/igf"
            android:id="@+id/greenheading"
            android:layout_marginTop="74dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/greenheading"
            android:layout_marginTop="80dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:text="Done"
            android:backgroundTint="#1E54B7"
            />

    </RelativeLayout>

</LinearLayout>