<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141414"
    android:orientation="vertical"
    tools:context=".ui.warehouses.whTypeWareHouse">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#141414">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_back_arrow"
                android:padding="10dp"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="35dp"
                android:fontFamily="@font/roboto_medium"
                android:text=" WareHouse Facility"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18dp" />

        </androidx.appcompat.widget.Toolbar>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="35dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Select type of warehousing"
        android:textColor="@color/white"
        android:textSize="16dp" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/menu3"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="35dp"
        android:background="@color/white"
        android:hint="Select type of warehousing"
        app:boxBackgroundMode="filled"
        app:hintAnimationEnabled="false">

        <AutoCompleteTextView
            android:id="@+id/drop_item3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="@font/roboto_light"
            android:inputType="none" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:id="@+id/HeadingStatic"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="35dp"
        android:fontFamily="@font/roboto"
        android:text="Select the items you have at your home"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <RelativeLayout
        android:id="@+id/llContainer"
        android:layout_width="match_parent"
        android:layout_below="@id/HeadingStatic"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#141414">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/Matress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="21dp"
                    android:layout_marginTop="27dp"
                    android:background="@drawable/blue_box" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="27dp"
                    android:layout_toEndOf="@id/Matress"
                    android:fontFamily="@font/roboto_light"
                    android:text="Cot with mattress"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <CheckBox
                    android:id="@+id/Shoe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="219dp"
                    android:layout_marginTop="27dp"
                    android:background="@drawable/blue_box" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="27dp"
                    android:layout_marginEnd="64dp"
                    android:layout_toEndOf="@id/Shoe"
                    android:lineHeight="1dp"
                    android:text="Rack"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="@color/white"
                    android:textSize="14dp" />

                <CheckBox
                    android:id="@+id/Almirah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Matress"
                    android:layout_marginStart="21dp"
                    android:layout_marginTop="27dp"
                    android:background="@drawable/blue_box" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Matress"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="27dp"
                    android:layout_toEndOf="@id/Almirah"
                    android:text="Almirah"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <CheckBox
                    android:id="@+id/Fridge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Shoe"
                    android:layout_marginStart="219dp"
                    android:layout_marginTop="27dp"
                    android:background="@drawable/blue_box" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Shoe"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="27dp"
                    android:layout_marginEnd="64dp"
                    android:layout_toEndOf="@id/Shoe"
                    android:lineHeight="1dp"
                    android:fontFamily="@font/roboto_light"
                    android:text="Fridge"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card1"
            android:backgroundTint="#141414">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/Chair"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="21dp"
                    android:layout_marginTop="27dp"
                    android:background="@drawable/blue_box" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="27dp"
                    android:layout_toEndOf="@id/Chair"
                    android:text="Chairs"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <CheckBox
                    android:id="@+id/WashingMachine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="219dp"
                    android:layout_marginTop="27dp"
                    android:background="@drawable/blue_box" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="27dp"
                    android:layout_marginEnd="64dp"
                    android:layout_toEndOf="@id/WashingMachine"
                    android:text="TV"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <CheckBox
                    android:id="@+id/Sofa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Chair"
                    android:layout_marginStart="21dp"
                    android:layout_marginTop="27dp"
                    android:background="@drawable/blue_box" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Chair"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="27dp"
                    android:layout_toEndOf="@id/Sofa"
                    android:text="Sofa"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_light"
                    android:textSize="16dp" />

                <CheckBox
                    android:id="@+id/GasStove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/WashingMachine"
                    android:layout_marginStart="219dp"
                    android:layout_marginTop="27dp"
                    android:background="@drawable/blue_box" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/WashingMachine"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="27dp"
                    android:layout_marginEnd="64dp"
                    android:layout_toEndOf="@id/GasStove"
                    android:lineHeight="1dp"
                    android:text="Stove"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card2"
            android:backgroundTint="#141414">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/Table"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="21dp"
                    android:layout_marginTop="27dp"
                    android:background="@drawable/blue_box" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="27dp"
                    android:layout_toEndOf="@id/Table"
                    android:text="Table"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_light"
                    android:textSize="16dp" />

                <CheckBox
                    android:id="@+id/Cyclinder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="219dp"
                    android:layout_marginTop="27dp"
                    android:background="@drawable/blue_box" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="27dp"
                    android:layout_marginEnd="64dp"
                    android:layout_toEndOf="@id/Cyclinder"
                    android:text="Cyclinder"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

                <CheckBox
                    android:id="@+id/Purifier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Table"
                    android:layout_marginStart="21dp"
                    android:layout_marginTop="27dp"
                    android:background="@drawable/blue_box" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Table"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="27dp"
                    android:layout_toEndOf="@id/Purifier"
                    android:fontFamily="@font/roboto_light"
                    android:text="Purifier"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <CheckBox
                    android:id="@+id/bed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Cyclinder"
                    android:layout_marginStart="219dp"
                    android:layout_marginTop="27dp"
                    android:background="@drawable/blue_box" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Cyclinder"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="27dp"
                    android:layout_marginEnd="64dp"
                    android:layout_toEndOf="@id/bed"
                    android:lineHeight="1dp"
                    android:fontFamily="@font/roboto_light"
                    android:text="Bed"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="bottom"
        android:layout_height="match_parent">

<!--        <Button-->
<!--            android:id="@+id/btndetails"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_gravity="bottom"-->
<!--            android:layout_marginHorizontal="30dp"-->
<!--            android:layout_marginBottom="40dp"-->
<!--            android:backgroundTint="#1E54B7"-->
<!--            android:padding="10dp"-->
<!--            android:text="Continue"-->
<!--            android:textAllCaps="false"-->
<!--            android:textSize="18sp" />-->

        <Button
            android:id="@+id/btndetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="18dp"
            android:layout_marginVertical="18dp"
            android:background="@drawable/ic_button_bg_fill"
            android:drawablePadding="15dp"
            android:fontFamily="@font/roboto"
            android:maxLines="1"
            android:paddingHorizontal="60dp"
            android:paddingVertical="18dp"
            android:text="Continue"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="normal" />


    </LinearLayout>

</LinearLayout>