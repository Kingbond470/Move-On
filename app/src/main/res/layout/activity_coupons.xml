<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_app"
    android:orientation="vertical"
    tools:context=".ui.coupons.CouponsActivity">

    <TextView
        android:id="@+id/backToHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:drawableLeft="@drawable/ic_back_arrow"
        android:drawableTint="@color/white"
        android:fontFamily="@font/roboto"
        android:gravity="center_horizontal"
        android:text="Move On Wallet"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold" />

    <!--    <pl.droidsonroids.gif.GifImageView-->
    <!--        android:layout_width="150dp"-->
    <!--        android:layout_height="120dp"-->
    <!--        android:layout_gravity="center"-->
    <!--        android:layout_marginTop="15dp"-->
    <!--        android:scaleType="centerCrop"-->
    <!--        android:src="@drawable/coupons" />-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:src="@drawable/coupon_icon" />


    <TextView
        android:id="@+id/wallet_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/roboto"
        android:text="Coupons Available"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/coupons_custom_bg"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/coupon_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/coupon_tab_bg"
            android:clickable="true"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:text="Coupons"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/coin_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:text="Coins"
            android:textColor="#F4511E"
            android:textStyle="bold" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/wallet_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>