<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_app"
    tools:context=".ui.login.PasswordFragment">

    <ImageView
        android:id="@+id/ivPasswordGoogleLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_login_password_logo" />

    <TextView
        android:id="@+id/tvLoginPasswordHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivPasswordGoogleLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="18dp"
        android:fontFamily="@font/roboto"
        android:text="Enter your password"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="normal" />

    <FrameLayout
        android:id="@+id/etLoginPasswordLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLoginPasswordHeading">

        <EditText
            android:id="@+id/etLoginPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvLoginEmailHeading"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/ic_editext_background"
            android:fontFamily="@font/roboto"
            android:hint="Password"
            android:maxLength="35"
            android:paddingVertical="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="normal" />

        <ImageButton
            android:id="@+id/btnShowHideLogin"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/password_show"
            android:paddingVertical="17dp"
            android:scaleType="fitXY" />

    </FrameLayout>


    <TextView
        android:id="@+id/tvLoginSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etLoginPasswordLayout"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:fontFamily="@font/roboto"
        android:text="Forgot your password?"
        android:textColor="@color/blue_light"
        android:textSize="18sp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/btnLoginWithPasswordContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="18dp"
        android:layout_marginVertical="18dp"
        android:background="@drawable/ic_button_bg"
        android:drawablePadding="15dp"
        android:fontFamily="@font/roboto"
        android:maxLines="1"
        android:paddingHorizontal="60dp"
        android:paddingVertical="18dp"
        android:text="Continue"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="normal" />

</RelativeLayout>